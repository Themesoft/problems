<div class='container' style='margin-top:5%;'>
  <h1>Edit your profile</h1>
  <div class='row'>
    <div class='four columns'>

      <%= simple_form_for @user do |f| %>
        <%= f.input :first_name, input_html: { class: 'u-full-width'} %>
        <%= f.input :last_name, input_html: { class: 'u-full-width'} %>
        <%= f.input :email, input_html: { class: 'u-full-width'} %>
    </div>
    <div class='four columns'>
      <em style='color:red;'>You must log in after changing password.</em>
        <%= f.input :password, placeholder: 'leave blank if not changing', input_html: { class: 'u-full-width'} %>
        <%= f.input :password_confirmation, placeholder: 'leave blank if not changing', input_html: { class: 'u-full-width'} %>
    </div>
    <div class='twelve columns'>
        <%= f.button :submit, 'Update!' unless @edit %>
      <% end %>
    </div>
  </div>
</div>