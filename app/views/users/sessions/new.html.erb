<div class="row">
  <h2>Contributor Log In</h2>
  <h4><small>You can only login if you are a contributor</small></h4>
  <p>Teacher login coming soon...</p>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: true, label: false, placeholder: "EMAIL", autofocus: true, input_html:{ style: 'width:300px;'} %>
      <%= f.input :password, required: true, label: false, placeholder: "PASSWORD", label_html: { style: 'margin:0 0 0 10px;'}, input_html:{ style: 'width:300px;'} %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
