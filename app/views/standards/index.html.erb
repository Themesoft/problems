<div class='container'>
  <h1>Common Core State Standards</h1>

      <p>
        Download:
        <%= link_to "CSV", standards_path(format: "csv") %>
      </p>

  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Category</th>
        <th>Subcategory</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @standards.each do |standard| %>
        <tr>
          <td><%= standard.code %></td>
          <td><%= standard.category %></td>
          <td><%= standard.subcategory %></td>
          <td><%= link_to 'Show', standard %></td>
          <td><%= link_to 'Edit', edit_standard_path(standard) %></td>
          <td><%= link_to 'Destroy', standard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>
    <h3> Import Camp Offerings</h3>
    <%= form_tag import_standards_path, multipart: true do %>
      <%= file_field_tag :file %><br />
      <%= submit_tag "Import", class: 'btn btn-sm btn-default' %>
    <% end %>
  </p>
</div>