<!--Not navbar stuff-->

  <div class="info">
     <div class="container">
    <img id="picimg" src="http://www.indre-reisid.ee/wp-content/themes/envision/lib/images/default-placeholder.png" />
    <h2>Problem Name [DRAFT]</h2>
    <div class="contri">
      <h4>CONTRIBUTOR: <span>
        <%= link_to @project.author_name, @project.author_link, :class "supsection" %>
      </span></h4>
    </div>
    <div class="type">
      <h4>TYPE: <span>
        <%= @project.type, :class "supsection" %>
      </span></h4>
    </div>
    <% if current_user && (current_user == @project.user || current_user.admin?) %>
      <%= link_to 'Edit', edit_project_path(@project) %>
    <% end %>
  </div>
    <div class="block-tabs">
      <h3>Tags</h3>
      <ul>
        <% @project.tags.each do |tag| %>
          <li><%= tag.name %></li>
        <% end %>
      </ul>
    </div>
    <div class="resources">
      <h3>Resources</h3>
      <ul>
        <% @project.project_attachments.each_with_index do |pa, i| %>
            <li class="resource text-center">
            <%= link_to pa.resource_url, target: "_blank" do %>
              <%= "Resource #{i+1}" %>
            <% end %>
            </li>
        <% end %>
      </ul>
    </div>
    <hr>
  </div>

<!--CODE FOR THE IMAGE SLIDER GOES HERE-->

  <div class="info">
    <% @project.feature_order.chars.each do |section_id| %>
      <%= render section_for_id(section_id), locals: {project => @project} %>
    <% end %>
  </div>
  </div>
