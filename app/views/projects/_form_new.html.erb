<%= simple_form_for @project, :html => { :multipart => true } do |f| %>
  <div class="main">
    <aside>
      <div class="dropdown">
        <section class="container">
          <div class="dropdown">
            <%= f.input :status, label: 'Status', label: false, collection: Project::STATUSES.zip((0..2).to_a), input_html: { class: 'dropdown-select', name: 'one' } %>
          </div>
        </section>
      </div>
      <div class="save">
        <%= f.button :submit, 'Create!', label: false, class: 'button button-primary', id: 'project-button' unless @edit %>
        <%= f.hidden_field :feature_order %>
      </div>
      <div class="rresources">
        <h2>Resources</h2>
        <div id="rslide">
          <div id="rimagepart">
            <img id="rupload" src="http://www.myiconfinder.com/uploads/iconsets/3bfedbeee0930699d0cda9fa740170c3-cloud.png"/>
          </div>
          <div class="rboxes">
            <p>Or choose a file...</p>
            <ul>
              <li><%= f.input :resource, as: :file, label: false %></li>
              <li>Resource 2
                <i class="fa fa-times-circle"></i>
              </li>
              <li>Resource 3
                <i class="fa fa-times-circle"></i>
              </li>
              <li>Resource 4
                <i class="fa fa-times-circle"></i>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="tags">
        <h2>Tags</h2>
        <div class="place">
          TAGS
          <%= f.association :tags,label: false %>
          <br/>
        </div>
      </div>
    </aside>
    <section>
      <% if @project.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@project.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
          <% @project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="important">
        <h2>The Important Stuff
          <i class="fa fa-arrows"></i>
        </h2>
        <div id="left">
          <div id="inputs">
            <form action="#" method="post" name="things">
              <div id="fill">
                NAME OF PROBLEM
                <%= f.input :name,label: false %>
                <br/>
              </div>
              <div id="fill">
                CONTRIBUTOR NAME
                <%= f.input :author_name,label: false %>
                <br/>
              </div>
              <div id="big">
                PROBLEM STATEMENT
                <br/>
                <%= f.input :problem_statement, placeholder: 'Give us the goods. What is the problem?',label: false %>
                <br/>
              </div>
            </form>
          </div>
        </div>
        <div id="middle">
          <div id="inputs">
            <form action="#" method="post" name="nameofproblem">
              <div id="fill">
                TYPE OF PROBLEM
                <%= f.association :type,label: false %>
                <br/>
              </div>
              <div id="fill">
                LINK TO AUTHOR'S PAGE
                <%= f.input :author_link,label: false %>
                <br/>
              </div>
              <div id="big">
                HOOK
                <br/>
                <%= f.input :content, placeholder: 'What\'s the best way to get the audience on the edge of their seats?',label: false %>
                <br/>
              </div>
            </form>
          </div>
        </div>
        <div id="right">
          FEATURED IMAGE
          <img id="picimgb" src="http://innosoft.com.sa/wp-content/uploads/2014/03/placeholder.png"/>
          <div class="bicons">
            <p>Filename.ext
              <i class="fa fa-trash-o"></i>
              <i class="fa fa-pencil"></i>
              <i class="fa fa-cloud-upload"></i>
            </p>
          </div>
        </div>
      </div>
    </section>
    <section>
      <div class="deets">
        <h2>The Details
          <i class="fa fa-arrows"></i>
        </h2>
        <i class="icon-move"></i>
        <div id="left">
          <div id="medium">
            <form action="#" method="post" name="things">
              <div id="inputs">
                HISTORY
