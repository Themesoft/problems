<div class='container' style='margin-top: 5%'>
  <div class="row">
    <div class='two columns'>
      <%= link_to root_path do %>
        <%= image_tag('problems_icon_p.png', class: 'u-max-full-width', style: 'max-height:50px;') %>
      <% end %>
    </div>
  </div>
  <div class="row" style="margin-top:10%">
    <div class="twelve columns">
      <h1 style="display:inline;"> <%= @project.name %> </h1>
      <%= image_tag(@project.featured_image_url, class: 'u-pull-right', height: '150') %>
    </div>
  </div>
  <div class="row">
    <div class="twelve columns">
      <p>
        <b>Problem Statement:</b><br/>
        <%= @project.problem_statement %>
      </p>
      <p>
        <b>Hook:</b><br/>
        <%= @project.content %>
      </p>
      <p>
        <b>History:</b><br/>
        <%= @project.history %>
      </p>
      <p>
        <b>Pathways:</b><br/>
        <%= @project.pathways %>
      </p>
      <p>
        <b>Pitfalls:</b><br/>
        <%= @project.pitfalls %>
      </p>
      <p>
        <b>Extensions:</b><br/>
        <%= @project.extensions %>
      </p>
      <p>
        <b>Hints:</b><br/>
        <%= @project.hints %>
      </p>
      <p>
        <b>Teacher Moves:</b><br/>
        <%= @project.teacher_moves %>
      </p>
    </div>
  </div>
</div>