<div class='container' style='margin-top: 5%'>
  <div class="row">
    <div class='two columns' style='max-width:90px;margin-right:25px;'>
      <%= link_to root_path, class: 'logo' do %>
        <%= image_tag('problems_icon_p.png', class: 'u-max-full-width', style: 'max-height:50px;') %>
      <% end %>
    </div>
    <% if params[:search] %>
      <div class='seven columns clear-margin-left text-center'>
        <%= simple_form_for :search,
                          :url => url_for(:action => 'home', :controller => 'pages'),
                          :method => 'get' do |f| %>
        <%= f.input :terms, label: false, input_html: { class: 'u-full-width', style: 'margin-top:10px' } %>
      </div>
      <div class='two columns clear-margin-left text-center'>
        <%= f.button :submit, 'Search', style: 'margin-top:10px' %>
        <% end %>
      </div>
      <div class='two columns clear-margin-left'>
        <%= link_to 'Sign In', '#', class: 'u-pull-right' %>
      </div>
    <% else %>
      <div class='ten columns'>
        <%= link_to 'Sign In', '#', class: 'u-pull-right' %>
      </div>
    <% end %>
  </div>
</div>