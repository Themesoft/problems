<!DOCTYPE html>
<html>

<head>
  <title>Problems</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
      <script type="text/x-mathjax-config">
        MathJax.Hub.Config({ tex2jax: { inlineMath: [ ['$','$'] ], processEscapes: true }, "HTML-CSS": { linebreaks: { automatic: false } } });
      </script>
      <%= mathjax_tag %>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
        <%= csrf_meta_tags %>
</head>

<body>

  <div class="nav">
    <div id="menu">
      <div class="logo">
        <a href="#">Problems</a>
      </div>
      <ul class="links">
        <li>
          <%= link_to 'My Page', user_path(current_user) if current_user%>
        </li>
        <ul>
          <li>
            <%= link_to "The List", projects_url %>
          </li>
          <ul>
            <li><a href="#">Published Problems</a></li>
            <li><a href="#">Problem Drafts</a></li>
          </ul>
          </li>
        </ul>
        <li>
          <%= link_to 'Sign In', new_user_session_path unless current_user %>
        </li>
        <% if current_user %>
          <li>
            <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
          </li>
          <% end %>
      </ul>
    </div>
    <div class="header">
      <ul>
        <i class="fa fa-home fa-fw"></i>
        <li>Dashboard /</li>
        <li><%= link_to 'Add Problem', new_project_path, class: 'button u-pull-right u-full-width' %></li>
      </ul>
    </div>
  </div>

  <% flash.each do |type, message| %>
    <div class="alert <%= alert_class_for(type) %> ">
      <%= message %>
    </div>
    <% end %>

      <div>
        <%= yield %>
      </div>

      <% if Rails.env.development? %>
        <div class='container'>
          <%= debug(params) %>
        </div>
        <% end %>
</body>
<footer>

  <%= render 'layouts/footer' %>

</footer>

</html>
