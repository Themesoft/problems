<!DOCTYPE html>
<html>

<head>
  <title>Problems</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <% yield(:head) %>
    <%= javascript_include_tag 'application' %>
      <script type="text/x-mathjax-config">
        MathJax.Hub.Config({ tex2jax: { inlineMath: [ ['$','$'] ], processEscapes: true }, "HTML-CSS": { linebreaks: { automatic: false } } });
      </script>
      <%= mathjax_tag %>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">

        <%= csrf_meta_tags %>


</head>

<body class="<%= css_inject(controller_name, @page) %>">

  <% if controller_name == 'projects' %>
    <%= render 'layouts/nav_new' %>
  <% else %>
    <%= render 'layouts/nav_classic' %>
  <% end %>

  <% flash.each do |type, message| %>
    <div class="alert <%= alert_class_for(type) %> ">
      <%= message %>
    </div>
    <% end %>

      <% if controller_name == 'projects' %>
        <div>
      <% else %>
        <div class="container">
      <% end %>
        <%= yield %>
      </div>

      <% if Rails.env.development? %>
        <div class='container'>
          <%= debug(params) %>
        </div>
        <% end %>
</body>
<footer>

  <%= render 'layouts/footer' %>

</footer>

</html>
